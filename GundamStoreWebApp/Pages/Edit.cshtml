@page
@model GundamStoreWebApp.Pages.EditModel

<div class="row pt-5">
    <div class="col-md-4">
        <form method="post">
            <h4>Edit model kits</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="ModelKit.ModelKitId" />

            <div class="form-group">
                <label asp-for="ModelKit.Name" class="control-label"></label>
                <input asp-for="ModelKit.Name" class="form-control" />
                <span asp-validation-for="ModelKit.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ModelKit.Description" class="control-label"></label>
                <input asp-for="ModelKit.Description" class="form-control" />
                <span asp-validation-for="ModelKit.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ModelKit.ModelGrade" class="control-label"></label>
                <input asp-for="ModelKit.ModelGrade" class="form-control" />
                <span asp-validation-for="ModelKit.ModelGrade" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ModelKit.ImageUri" class="control-label"></label>
                <input asp-for="ModelKit.ImageUri" class="form-control" />
                <span asp-validation-for="ModelKit.ImageUri" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ModelKit.Price" class="control-label"></label>
                <input asp-for="ModelKit.Price" class="form-control" />
                <span asp-validation-for="ModelKit.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ModelKit.RegistrationDate" class="control-label"></label>
                <input asp-for="ModelKit.RegistrationDate" class="form-control" />
                <span asp-validation-for="ModelKit.RegistrationDate" class="text-danger"></span>
            </div>

            <div class="form-group mt-3 mb-3">
                <label asp-for="ModelKit.BrandID" class="control-label"></label>
                <select class="form-select" asp-for="ModelKit.BrandID"
                        asp-items="Model.BrandOptionItems">
                    <option value="">Select an option</option>
                </select>
                <span asp-validation-for="ModelKit.BrandID" class="text-danger">
                </span>
            </div>

            <div class="form-group mt-3 mb-3">
                <input class="form-check-input" asp-for="ModelKit.ExpressDelivery" />
                <label asp-for="ModelKit.ExpressDelivery"></label>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Save" class="btn btn-primary" />
                <input type="submit" value="Delete" class="btn btn-danger" 
                asp-page-handler="Delete"/>

            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}