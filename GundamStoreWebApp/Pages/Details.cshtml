@page "/model-kits/{slug}/{id:int:min(1)}"
@model GundamStoreWebApp.Pages.DetailsModel


<h2 class="my-3">@Model.ModelKit.Name</h2>

<div class="row">

    <div class="col-4">
        <img class="img-fluid rounded" src="@Model.ModelKit.ImageUri">
    </div>

    <div class="col-6">
        <h4 class="my-3">About:</h4>
        <p>@Model.ModelKit.Description</p>
        <h4 class="my-3">More Info:</h4>
        <ul>
            <li>Grade: @Model.ModelKit.ModelGrade</li>
            <li>Price: @Html.DisplayFor(model => model.ModelKit.Price)</li>
            <li>Available since: @Html.DisplayFor(model => model.ModelKit.RegistrationDate)</li>
        </ul>
        <a class="btn btn-primary"
           asp-page="/Edit"
           asp-route-id="@Model.ModelKit.ModelKitId">Edit</a>
    </div>
</div>
 